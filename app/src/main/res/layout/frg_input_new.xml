<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/text_style_20_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深兰智能设备管理工具" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mLinearLayout_zc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mLinearLayout_1"
                    android:gravity="right"
                    android:text="输入新密码" />

                <LinearLayout
                    android:id="@+id/mLinearLayout_1"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_logink"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/mEditText_pass"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:gravity="center_vertical"
                        android:hint="请输入新密码"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/mImageView_kan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:src="@drawable/mima1" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mLinearLayout_2"
                    android:gravity="right"
                    android:text="再次输入新密码" />

                <LinearLayout
                    android:id="@+id/mLinearLayout_2"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_logink"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/mEditText_pass_2"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:gravity="center_vertical"
                        android:hint="请输入新密码"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/mImageView_kan2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:src="@drawable/mima1" />
                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/mTextView_yz"
                style="@style/text_style_15_white"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="确认修改" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>