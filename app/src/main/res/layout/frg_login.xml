<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/text_style_20_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深兰智能设备管理工具" />

    <TextView
        android:id="@+id/mTextView_user"
        style="@style/text_style_15_black"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_logink"
        android:drawableLeft="@drawable/morentouxiang_n"
        android:drawableRight="@drawable/ic_expand_more_black_24dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="shenlan@blue.com"></TextView>

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/mGridPasswordView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:gpvPasswordLength="6" />

    <TextView
        android:id="@+id/mTextView"
        style="@style/text_style_15_white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_blue"
        android:gravity="center"
        android:padding="10dp"
        android:text="登录" />
</LinearLayout>