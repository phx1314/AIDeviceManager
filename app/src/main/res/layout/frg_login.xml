<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/text_style_20_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深兰智能设备管理工具" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mLinearLayout_zc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_gray"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mEditText_phone"
                    style="@style/text_style_15_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="17751305918"
                    android:hint="请输入手机号"
                    android:padding="8dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/mTextView_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/shape_gray_b"
                    android:padding="5dp"
                    android:text="获取验证码"
                    android:textColor="#4E68F0"
                    android:textSize="13sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/mEditText_code"
                style="@style/text_style_15_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_gray"
                android:drawableLeft="@drawable/vcode"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/mEditText_pass"
                style="@style/text_style_15_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_gray"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="5dp"
                android:text="123456"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mTextView"
                style="@style/text_style_15_white"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="登录" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>