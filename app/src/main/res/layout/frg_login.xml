<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_style_20_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/d_title" />


            <LinearLayout
                android:id="@+id/mLinearLayout_zc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:text="@string/d_yhm" />

                    <EditText
                        android:id="@+id/mEditText_phone"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_logink"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:hint="@string/d_qsrsjh2"
                        android:padding="8dp"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:text="@string/d_mm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_logink"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/mEditText_pass"
                            style="@style/text_style_15_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:gravity="center_vertical"
                            android:hint="@string/i_porc_length"
                            android:inputType="textPassword"
                            android:padding="8dp"
                            android:singleLine="true" />

                        <ImageView
                            android:id="@+id/mImageView_kan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="10dp"
                            android:src="@drawable/mima1" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/mTextView_forget"
                    style="@style/text_style_15_black"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/d_wjmm"
                    android:textColor="#169BD5" />

                <LinearLayout
                    android:id="@+id/mLinearLayout_lg"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_blue"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextView"
                        style="@style/text_style_15_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/d_login" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>